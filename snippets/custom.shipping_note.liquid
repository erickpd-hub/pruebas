




<style>
  .shipping-message-container {
    margin-top: 1.5rem;
    padding: 1rem;
    border: 1px solid #d1d5db; /* gray-300 */
    border-radius: 0.5rem;
    background-color: #f0fff4; /* Verde muy claro para destacar */
    font-family: Arial, sans-serif;
    display: block;
  }
  .custom-shipping-note {
    font-size: 1.125rem; /* text-lg */
    font-weight: bold;
    color: #047857; /* green-700 fuerte */
    display: flex;
    align-items: center;
  }
  .default-shipping-note {
    font-size: 1rem; /* text-base */
    color: #4b5563; /* gray-600 */
    font-style: italic;
  }
  .shipping-icon {
    width: 20px;
    height: 20px;
    margin-right: 8px;
    color: #047857; /* Icono verde */
  }
</style>




{% if product %}
  {% assign shipping_note_value = product.metafields.custom.shipping_note %}
{% else %}
  {% assign shipping_note_value = blank %}
{% endif %}



<div class="shipping-message-container">
  {% if shipping_note_value != blank and shipping_note_value.value != blank %}
    

    <p class="custom-shipping-note">
 
      {{ shipping_note_value.value }}
    </p>

  {% else %}

    {% comment %} CÓDIGO SI EL CAMPO META FALTA O ESTÁ EN BLANCO (FALLBACK POR DEFECTO) {% endcomment %}
    <p class="default-shipping-note">
      <span style="font-weight: 600;">Standar Shipping:</span> Ships in 3-5 days.
    </p>

  {% endif %}
</div>

