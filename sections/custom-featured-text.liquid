{% assign title = section.settings.title %}
{% assign description = section.settings.description %}
{% assign background_color = section.settings.background_color %}

{% if title != blank %}
  <section style="background-color: {{ background_color }};">
    <div class="custom-featured-text__container">
      <h2 class="custom-featured-text__title">
        {{ title | escape }}
      </h2>
      {% if description != blank %}
        <div class="custom-featured-text__description">
          {{ description }}
        </div>
      {% endif %}
    </div>
  </section>
{% else %}
  <section style="background-color: {{ background_color | default: '#f3f4f6' }};">
    <div class="custom-featured-text__container">
      <p style="text-align: center; padding: 2rem; color: #777;">
        Agrega un título para mostrar esta sección
      </p>
    </div>
  </section>
{% endif %}

{% stylesheet %}
  .custom-featured-text__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .custom-featured-text__title {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }
  
  .custom-featured-text__description {
    font-size: 1.125rem;
    line-height: 1.6;
  }
  
  @media (min-width: 768px) {
    .custom-featured-text__container {
      padding: 3rem 2rem;
    }
    
    .custom-featured-text__title {
      font-size: 2.5rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Texto Destacado Personalizado",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Destaca tu Mensaje Aquí"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descripción",
      "default": "<p>Agrega una descripción para tu mensaje destacado.</p>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de Fondo",
      "default": "#f3f4f6"
    }
  ],
  "presets": [
    {
      "name": "Texto Destacado",
      "category": "Custom",
      "settings": {
        "title": "Destaca tu Mensaje Aquí",
        "description": "<p>Agrega una descripción para tu mensaje destacado.</p>",
        "background_color": "#f3f4f6"
      }
    }
  ]
}
{% endschema %}

